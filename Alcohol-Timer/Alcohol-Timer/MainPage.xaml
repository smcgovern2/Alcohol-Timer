<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alcohol_Timer.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="When Can I buy Alcohol" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text= "Date" x:Name="Lbl_Date" />
        <DatePicker Margin = "10,10,0,0" x:Name="Picker"/>

        <Button Text="Calculate" x:Name="Btn_Date" Clicked="Btn_Clicked" />


    </StackLayout>

</ContentPage>
